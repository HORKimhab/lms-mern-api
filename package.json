{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:debug": "tsx watch --inspect src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "typecheck": "tsc --noEmit",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",

  "migration:run": "npm run typeorm -- migration:run -d ./src/data-source.ts",
  "migration:generate": "npm run typeorm -- migration:generate -d ./src/data-source.ts src/migrations/$npm_config_name",
  "migration:create": "npm run typeorm -- migration:create src/migrations/$npm_config_name",
  "migration:revert": "npm run typeorm -- migration:revert -d ./src/data-source.ts",
  "migration:show": "npm run typeorm -- migration:show -d ./src/data-source.ts",
    "schema:sync": "npm run typeorm -- schema:sync -d src/config/database.config.ts",
    "schema:drop": "npm run typeorm -- schema:drop -d src/config/database.config.ts",
    "seed": "ts-node -r tsconfig-paths/register src/scripts/seed.ts",
    "db:reset": "npm run schema:drop && npm run migration:run && npm run seed"
  },
  "engines": {
    "node": ">=22"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.0",
    "@types/nodemailer": "^7.0.3",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "nodemon": "^3.1.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.3",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.3",
    "paypal-rest-sdk": "^1.8.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.27"
  }
}
